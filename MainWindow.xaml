<Window x:Class="WpfApp1.MainWindow" Name="Metayeg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Metayeg" Height="1080" Width="1920">
    <Grid x:Name="ProjGrid" KeyDown="DeleteLast">
        <Button Content="Set Path" HorizontalAlignment="Left" Height="31" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="74" Click="Button_Click" Panel.ZIndex="1"/>
        <Label Content="Current Path: None" Name="PathLabel" HorizontalAlignment="Left" Height="31" Margin="97,0,0,10" VerticalAlignment="Bottom" Width="492" Panel.ZIndex="1"/>
        <Image x:Name="Opened" HorizontalAlignment="Left" Height="1002" Margin="10,10,0,0" VerticalAlignment="Top" Width="1874" MouseMove="UpdateLocation" Stretch="Fill" Panel.ZIndex="0"/>
        <Label Content="Selected Location: (1000,1000)" Name="PixelLocation" HorizontalAlignment="Right" Height="31" Margin="0,0,502,2" VerticalAlignment="Bottom" Width="185" Panel.ZIndex="1"/>
        <Label Content="Last Rectangle: None" x:Name="LastRect" HorizontalAlignment="Right" Height="31" Margin="0,0,213,2" VerticalAlignment="Bottom" Width="284" Panel.ZIndex="1"/>
        <Button Content="Export" HorizontalAlignment="Right" Height="40" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="189" Click="Export" Panel.ZIndex="1"/>
        <Button Content="Previous" Name="PreviousButton" HorizontalAlignment="Left" Height="30" Margin="873,0,0,12" VerticalAlignment="Bottom" Width="72" Click="NextPrev" Panel.ZIndex="1"/>
        <Button Content="Next" Name="NextButton" HorizontalAlignment="Left" Height="29" Margin="980,0,0,12" VerticalAlignment="Bottom" Width="72" Click="NextPrev" Panel.ZIndex="1"/>
        <TextBox Name="Class_TextBox" HorizontalAlignment="Left" Height="20" Margin="770,0,0,16" TextWrapping="Wrap" Text="1" VerticalAlignment="Bottom" Width="103" LostFocus="ClassBox_LostFocus" GotFocus="ClassBox_GotFocus" Panel.ZIndex="1"/>
        <Label Content="Class:" x:Name="Class_Text" HorizontalAlignment="Left" Height="25" Margin="734,0,0,15" VerticalAlignment="Bottom" Width="41" Panel.ZIndex="1"/>
    </Grid>


</Window>
